{{#dropdown-list item="Items" img="assets/images/basket.png" btn-radius="no-radius" toggle="tooltip" title="map.menu.mtg.trail.items.tooltip"}}
    <ul {{bind-attr class=":dropdown-menu :map-items-dropdown"}}>
        <li>
            <table class="table table-hover table-striped table-condensed">
                <thead>
                <tr>
                    <th></th>
                    <th class="mtg-item-position-container">
                        <div class="btn-group">
                            <label class="btn btn-default btn-sm mtg-item-position" data-toggle="tooltip" title={{t "map.menu.mtg.trail.items.item.ground.tooltip" }}>
                              {{ radio-button name='position' value=(t "map.menu.mtg.trail.items.item.ground") groupValue=currentItem.position }}{{t "map.menu.mtg.trail.items.item.ground" }}
                            </label>
                            <label class="btn btn-default btn-sm mtg-item-position" data-toggle="tooltip" title={{t "map.menu.mtg.trail.items.item.suspended.tooltip" }}>
                              {{ radio-button name='position' value=(t "map.menu.mtg.trail.items.item.suspended") groupValue=currentItem.position }}{{t "map.menu.mtg.trail.items.item.suspended" }}
                            </label>
                            <label class="btn btn-default btn-sm mtg-item-position" data-toggle="tooltip" title={{t "map.menu.mtg.trail.items.item.hidden.tooltip" }}>
                              {{ radio-button name='position' value=(t "map.menu.mtg.trail.items.item.hidden") groupValue=currentItem.position }}{{t "map.menu.mtg.trail.items.item.hidden" }}
                            </label>
                        </div>
                    </th>
                    <th class="item-type">
                      {{view "select" class="form-control input-sm" content=itemTypes value=currentItem.type}}
                    </th>
                    <th>
                      {{input type="text" class="form-control input-sm" value=currentItem.description placeholder=(t "map.menu.mtg.trail.items.item.description.placeholder") size="14"}}
                    </th>
                    <th>
                        <button type="button" class="btn btn-default btn-sm" {{action 'addItem'}}>
                            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                        </button>
                    </th>
                </tr>
                </thead>
                <tbody>
                {{#each items as |item|}}
                    <tr>
                        <td class="mtg-item-index-container">
                          {{item.index}}
                        </td>
                        <td class="mtg-item-position-container">
                          {{item.position}}
                        </td>
                        <td class="item-type">
                          {{item.type}}
                        </td>
                        <td>
                          {{item.description}}
                        </td>
                        <td class="btn-group">
                            <button type="button" class="btn btn-success btn-sm" {{bind-attr disabled=isPositionDisabled}} {{action 'positionItem' item}}>
                                <span class="glyphicon glyphicon-record" aria-hidden="true"></span>
                            </button>
                            <button type="button" class="btn btn-danger btn-sm" {{action 'deleteItem' item}}>
                                 <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                            </button>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </li>
    </ul>
{{/dropdown-list}}
