{{#dropdown-list item="Import" icon="import" toggle="tooltip" title="Import a path related ot the selected trail"}}
    <ul class="dropdown-menu mtg-trail-tools-import-dropdown">
        <li>
            <table class="table table-hover table-condensed">
                <tbody>
                <tr>
                    <td {{action 'trailerTraceImportAction'}}>
                    <span type="button" data-toggle="tooltip" title="Import the Trailer's Trail"
                          class="btn btn-pink mtg-trail-import-trailer">
                        <img src="assets/images/walk.png" class="inverted" width="16" height="16"/>
                    </span>
                        Import trailer's track
                    </td>
                </tr>
                <tr>
                    <td {{action 'teamTraceImportAction'}}>
                    <span type="button" data-toggle="tooltip" title="Import the Team's Trail"
                          class="btn btn-warning mtg-trail-import-team">
                        <img src="assets/images/track.png" class="inverted" width="16" height="16"/>
                    </span>
                        Import team's track
                    </td>
                </tr>
                </tbody>
            </table>
        </li>
    </ul>
{{/dropdown-list}}
