<form class="form-inline btn-group">
  {{input class="form-control input-sm btn-group" placeholder="trail's name" value=addTrailName}}
  <button type="button" class="btn btn-default btn-sm" {{action 'addTrail'}}>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
  </button>
  {{view "select" class="form-control input-sm btn-group" content=trails optionValuePath="content" optionLabelPath="content.name" selection=selectedTrail}}
  {{view 'mtgLevels'}}
  {{view 'mtgItems'}}
  {{#dropdown-list selected=selected item="Export" icon="export" resetView="false"}}
      <ul class="dropdown-menu map-data-export-dropdown">
        {{#each format in formats}}
            <li><a {{action 'exportTrail' format selectedTrail}}>{{format}}</a></li>
        {{/each}}
      </ul>
  {{/dropdown-list}}
    <button type="button"
            class="btn btn-warning btn-sm" {{action 'deleteTrail' selectedTrail}}>
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
    </button>
    <button type="button" class="btn btn-default btn-sm" {{action 'saveTrail' selectedTrail}}>
        <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
    </button>
</form>

