{{#dropdown-list selected=selected item="Weather" img="assets/images/weather.png" color="default"}}
  <ul class="dropdown-menu">
    <li>
      <table class="table table-striped table-condensed">
        <thead>
          <tr>
            <th colspan="2">
              <div class="col-lg-12">
                <div class="input-group input-group-sm">
                  {{date-picker class="form-control" date=date valueFormat='YYYY-MM-DD' size="8"}}
                  {{view "select" class="form-control" content=time optionLabelPath="content.value" value=selectedTime}}
                  <span class="input-group-btn">
                    <button type="button" class="btn btn-default btn-sm" {{action 'checkWeather'}}>Get</button>
                  </span>
                </div>
              </div>
            </th>
          </tr>
        </thead>
        {{#if error }}
        <tbody>
          <tr class="warning"><td colspan="2">{{error}}</td></tr>
        </tbody>
        {{else}}
          {{view "mapWeatherResult"}}
        {{/if}}
      </table>
    </li>
  </ul>
{{/dropdown-list}}
